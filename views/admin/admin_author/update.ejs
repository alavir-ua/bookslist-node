<%- include ('../layouts/header.ejs') %>

<section>
  <div class="container">
    <div class="row">
      <br>
      <div class="breadcrumbs">
        <ol class="breadcrumb">
          <li><a href="/admin">Админпанель</a></li>
          <li><a href="/admin/authors">Управление авторами</a></li>
          <li class="active">Редактировать автора</li>
        </ol>
      </div>
      <h4>Редактировать автора "<%= author.name %>"</h4>
      <br>
      <div class="col-lg-4">
        <div class="login-form">
          <form action="/admin/author/update/<%= author.id %>" method="post">
            <p>Имя</p>
            <input type="text" name="name" placeholder="" value="<%= author.name %>">
            <br>
            <p>Статус отображения</p>
            <select name="status">
              <% if(author.status === 1) { %>
                <option value="1" selected="selected">Да</option>
                <option value="0">Нет</option>
              <% } else { %>
                <option value="1">Да</option>
                <option value="0" selected="selected">Нет</option>
              <% } %>
            </select>
            <br><br><br>
            <input type="submit" name="submit" class="btn btn-default checkout" value="Сохранить">
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include ('../layouts/footer.ejs') %>

