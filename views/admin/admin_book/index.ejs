<%- include ('../layouts/header.ejs') %>

<section>
  <div class="container">
    <div class="row">
      <br>
      <div class="breadcrumbs">
        <ol class="breadcrumb">
          <li><a href="/admin">Админпанель</a></li>
          <li class="active">Управление книгами</li>
        </ol>
      </div>
      <a href="/admin/book/create" class="btn btn-default back"><i class="fa fa-plus"></i> Добавить книгу</a>
      <% if(Object.keys(adminBooksLimit).length !== 0) { %>
        <h4>Список книг</h4>
        <br>
        <table class="table-bordered table-striped table">
          <tr>
            <th>ID</th>
            <th>Код</th>
            <th>Название</th>
            <th>Стоимость</th>
            <th>Жанр</th>
            <th>Авторы</th>
            <th>Изображение</th>
            <th>Новая</th>
            <th>Рекомендуемая</th>
            <th>Статус отображения</th>
            <th></th>
            <th></th>
          </tr>
          <% adminBooksLimit.forEach(function(book) { %>
            <tr>
              <td><%= book.id %></td>
              <td><%= book.code %></td>
              <td><%= book.name %></td>
              <td><%= book.price %></td>
              <td><%= book.genres %></td>
              <td><%= book.authors %></td>
              <% if(book.image) { %>
                <td>Есть</td>
              <% } else { %>
                <td  style="color: red;"><b>Нет</b></td>
              <% } %>
              <td>
                <% if(book.is_new == 1) { %>
                  Да
                <% } else { %>
                  Нет
                <% } %>
              </td>
              <td>
                <% if(book.is_recommended === 1) { %>
                  Да
                <% } else { %>
                  Нет
                <% } %>
              </td>
              <% if(book.status === 1) { %>
                <td>Есть</td>
              <% } else { %>
                <td  style="color: red;"><b>Нет</b></td>
              <% } %>
              <td><a href="/admin/book/update/<%= book.id %>" title="Редактировать"><i
                    class="fa fa-pencil-square-o"></i></a></td>
              <td><a id="deleteBook" data-id="<%= book.id %>" href="/admin/book/delete/<%= book.id %>"
                     title="Удалить"><i class="fa
                        fa-times"></i></a></td>
            </tr>
          <% }); %>
        </table>
        <% if (pageCount > 1) { %>
          <ul class="pagination">
            <% if (currentPage > 1) { %>
              <li><a href="/admin/books/?page=1">&laquo;</a></li>
            <% } %>
            <% var i = 1;
              if (currentPage > 5) {
                i = +currentPage - 4;
              } %>
            <% if (i !== 1) { %>
              <li class="disabled"><a href="#">...</a></li>
            <% } %>
            <% for (i; i <= pageCount; i++) { %>
              <% if (currentPage == i) { %>
                <li class="active"><span><%= i %> </span></li>
              <% } else { %>
                <li><a href="/admin/books/?page=<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (i == (+currentPage + 4)) { %>
                <li class="disabled"><a href="#">...</a></li>
              <% break; } %>
            <% } %>
            <% if (currentPage != pageCount) { %>
              <li><a href="/admin/books/?page=<%= pageCount %>">&raquo;</a></li>
            <% } %>
          </ul>
        <% } %>
      <% } else { %>
        <h4>Книг пока нет</h4>
      <% } %>
    </div>
  </div>
</section>

<%- include ('../layouts/footer.ejs') %>

