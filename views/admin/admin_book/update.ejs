<%- include ('../layouts/header.ejs') %>

<section>
  <div class="container">
    <div class="row">

      <br/>

      <div class="breadcrumbs">
        <ol class="breadcrumb">
          <li><a href="/admin">Админпанель</a></li>
          <li><a href="/admin/bookы">Управление книгами</a></li>
          <li class="active">Редактировать книгу</li>
        </ol>
      </div>


      <h4>Редактировать книгу #<%= book.id %></h4>

      <br>

      <div class="col-lg-4">
        <div class="login-form">
          <form action="/admin/book/update/<%= book.id %>" method="post" enctype="multipart/form-data">
            <div class="container">
              <div class="row">
                <div class="col-lg-5">
                  <p>Название книги</p>
                  <input type="text" name="name" placeholder="" value="<%= book.name %>">

                  <p>Код</p>
                  <input type="text" name="code" placeholder="" value="<%= book.code %>">

                  <p>Стоимость</p>
                  <input type="text" name="price" placeholder="" value="<%= book.price %>">
                  <br>

                  <p>Жанр</p>
                  <input type="text" placeholder="<%= book.genres %>" readonly>
                  <select name="genre_id[]" size="5" multiple="multiple">
                    <% if(Object.keys(genresList).lenght !== 0) { %>
                      <% genresList.forEach(function(genre) { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                      <% }); %>
                    <% } %>
                  </select>
                  <br/><br/>

                  <p>Автор</p>
                  <input type="text" placeholder="<%= book.authors %>" readonly>
                  <select name="author_id[]" size="5" multiple="multiple">
                    <% if(authorsList.lenght !== 0) { %>
                      <% authorsList.forEach(function(author) { %>
                        <option value="<%= author.id %>"><%= author.name %></option>
                      <% }); %>
                    <% } %>
                  </select>
                  <br><br>

                  <p>Изображение книги:&nbsp;<b><%= book.image %></b></p>
                  <input type="file" name="image" placeholder="" value="">

                  <br><br>
                  <input type="submit" name="submit" class="btn btn-default checkout" value="Обновить">
                </div>
                <div class="col-lg-5">

                  <p>Описание</p>
                  <textarea name="description" rows="12"><%= book.description %></textarea>
                  <br><br>
                  <p>Новинка</p>
                  <select name="is_new">
                    <% if(book.is_new === 1) { %>
                      <option value="1" selected="selected">Да</option>
                      <option value="0">Нет</option>
                    <% } else { %>
                      <option value="1">Да</option>
                      <option value="0" selected="selected">Нет</option>
                    <% } %>
                  </select>
                  <br><br>
                  <p>Рекомендуемая</p>
                  <select name="is_recommended">
                    <% if(book.is_recomended === 1) { %>
                      <option value="1" selected="selected">Да</option>
                      <option value="0">Нет</option>
                    <% } else { %>
                      <option value="1">Да</option>
                      <option value="0" selected="selected">Нет</option>
                    <% } %>
                  </select>
                  <br><br>
                  <p>Статус отображения</p>
                  <select name="status">
                    <% if(book.status === 1) { %>
                      <option value="1" selected="selected">Да</option>
                      <option value="0">Нет</option>
                    <% } else { %>
                      <option value="1">Да</option>
                      <option value="0" selected="selected">Нет</option>
                    <% } %>
                  </select>
                </div>
              </div>
            </div>
            <br>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include ('../layouts/footer.ejs') %>

