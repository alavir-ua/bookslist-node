<section>
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 padding-right">
        <div class="signup-form"><!--sign up form-->
          <h2>Создайте свой аккаунт</h2>
          <div id="error-group" class="alert-danger form-error">
            <ul id="errors"></ul>
          </div><br>
          <form id="registerForm">
            <p>Имя</p>
            <input type="text" id="name" placeholder="" value="">
            <p>Email</p>
            <input type="email" id="email" placeholder="" value="">
            <p>Пароль</p>
            <input type="password" id="password" placeholder="" value="">
            <br><br>
            <input type="submit" name="submit" class="btn btn-default checkout" value="Регистрация"/>
          </form>
        </div><!--/sign up form-->
        <br/>
        <br/>
      </div>
    </div>
  </div>
</section>

